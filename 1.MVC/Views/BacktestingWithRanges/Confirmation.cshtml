@model MasterTrade.Models.BacktestingWithRangesConfirmationModel
@{
    ViewBag.Title = "Backtesting con rangos - Confirmación";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <h4>Revise si todo es correcto</h4>
    <hr />
    @using (Html.BeginForm("Confirmation", "BacktestingWithRanges", FormMethod.Post, new { role = "form" }))
    {
        <div class="row">
            <h5>Configuración del backtesting</h5>
        </div>
        <div class="col-md-12">
            <ul>
                <li><b>Estrategia:</b> @Model.StrategyName</li>
                <li><b>Par de criptomonedas:</b> @Model.CryptoPairName</li>
                <li><b>Rango de fechas:</b> @Model.DateRange</li>
                <li><b>Temporalidad:</b> @Model.Temporality</li>
            </ul>
        </div>
        for (int i = 0; i < Model.Indicators.Count; i++)
        {
            <div class="row">
                <h5>@Model.Indicators[i].IndicatorName: @Model.Indicators[i].ConfigurationName</h5>
            </div>
            <div class="col-md-12">
                <ul>
                    <li><b>Rango</b>: @Model.Indicators[i].Range</li>
                    <li><b>Incremento</b>: @Model.Indicators[i].Increment</li>
                </ul>
            </div>
        }
        <div class="row" style="margin-top: 0.5rem;">
            <div class="offset-md-8 col-md-4">
                @Html.ActionLink("Cancelar", "Index", "Home", new { area = "" }, new { @class = "btn btn-outline-dark" })
                @Html.ActionLink("Modificar", "Step1", "BacktestingWithRanges", new { area = "" }, new { @class = "btn btn-outline-dark" })
                <input type="submit" value="Ejecutar" class="btn btn-outline-dark lightBrownBtn" />
            </div>
        </div>
    }
</main>